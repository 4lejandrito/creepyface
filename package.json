{
  "name": "creepyface",
  "version": "4.1.6",
  "keywords": [
    "face",
    "look",
    "mouse",
    "pointer",
    "finger",
    "follow",
    "creepy"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/4lejandrito/creepyface.git"
  },
  "author": "Alejandro Tard√≠n <alejandro@tardin.com>",
  "license": "MIT",
  "files": [
    "dist"
  ],
  "main": "dist/creepyface.umd.js",
  "types": "dist/creepyface.d.ts",
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/preset-env": "^7.2.3",
    "@types/jest": "^23.3.11",
    "babel-core": "7.0.0-bridge.0",
    "babel-jest": "^23.6.0",
    "chromedriver": "^2.45.0",
    "coveralls": "^3.0.2",
    "eslint": "^5.11.1",
    "geckodriver": "^1.14.1",
    "husky": "^1.3.1",
    "jest": "^23.6.0",
    "lint-staged": "^8.1.0",
    "lolex": "^3.0.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^2.6.3",
    "prettier": "^1.15.3",
    "rollup": "^1.0.0",
    "rollup-plugin-babel": "^4.2.0",
    "rollup-plugin-browsersync": "^1.0.0",
    "rollup-plugin-commonjs": "^9.2.0",
    "rollup-plugin-node-resolve": "^4.0.0",
    "rollup-plugin-uglify": "^6.0.0",
    "selenium-webdriver": "^4.0.0-alpha.1",
    "simulate-event": "^1.4.0",
    "standard": "^12.0.1",
    "ts-jest": "^23.10.5",
    "tslint": "^5.12.0",
    "tslint-config-prettier": "^1.17.0",
    "tslint-config-standard": "^8.0.1",
    "typescript": "^3.2.2"
  },
  "dependencies": {
    "get-element-center": "^1.1.0",
    "image-promise": "^5.0.1"
  },
  "lint-staged": {
    "./**/*": [
      "prettier --write",
      "git add"
    ]
  },
  "scripts": {
    "all": "run-s clean lint build test",
    "travis": "run-s clean lint build test:coverage",
    "prepublishOnly": "npm run all",
    "start": "npm run build:ts && run-p \"build:* -- -w\"",
    "lint": "tslint --project tsconfig.json",
    "build:ts": "tsc",
    "build:umd": "rollup -c",
    "build": "NODE_ENV=production run-s build:*",
    "clean": "rimraf dist",
    "test": "jest",
    "test:coverage": "jest --coverage && cat ./coverage/lcov.info | coveralls"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
