{
  "name": "creepyface-monorepo",
  "repository": {
    "type": "git",
    "url": "https://github.com/4lejandrito/creepyface.git"
  },
  "author": "Alejandro Tard√≠n <alejandro@tardin.com>",
  "license": "MIT",
  "devDependencies": {
    "husky": "^1.3.1",
    "lerna": "^3.20.2",
    "lint-staged": "^8.1.0",
    "prettier": "^1.15.3"
  },
  "lint-staged": {
    "*.{js,ts,tsx,md,json,html,css}": [
      "prettier --write",
      "git add"
    ]
  },
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "lerna run build",
    "start": "lerna run --parallel start",
    "test": "lerna run test",
    "test:coverage": "lerna run test:coverage"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
